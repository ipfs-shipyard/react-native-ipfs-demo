{
  "name": "react-native-ipfs-demo",
  "version": "1.0.0",
  "description": "Demo of JS IPFS running in React Native for Android and iOS.",
  "private": true,
  "author": "Andr√© Costa Lima <andreclima.pt@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:ipfs-shipyard/react-native-ipfs-demo"
  },
  "scripts": {
    "start:ios:debug": "react-native run-ios --configuration Debug --scheme IPFS-Demo-iOS-Debug",
    "start:ios:release": "react-native run-ios --configuration Release --scheme IPFS-Demo-iOS-Release",
    "start:android:debug": "react-native run-android --variant debug",
    "start:android:release": "react-native run-android --variant release",
    "start:metro": "react-native start",
    "lint": "eslint .",
    "pods": "pod-install --project-directory=ios",
    "xcode": "xed -b ios",
    "studio": "studio android",
    "patch:ipfs": "patch-package --patch-dir patches/ipfs",
    "patch:rn": "patch-package --patch-dir patches/react-native",
    "postinstall": "npm run pods && npm run patch:ipfs && npm run patch:rn"
  },
  "dependencies": {
    "@react-native-community/masked-view": "^0.1.10",
    "@react-navigation/native": "^5.7.3",
    "@react-navigation/stack": "^5.9.0",
    "big-integer": "^1.6.48",
    "events": "^3.2.0",
    "ipfs-http-client": "^46.1.0",
    "multiaddr": "^8.0.0",
    "punycode": "^2.1.1",
    "react": "^16.9.0",
    "react-native": "^0.63.3",
    "react-native-device-info": "^6.2.0",
    "react-native-gesture-handler": "^1.7.0",
    "react-native-get-random-values": "^1.5.0",
    "react-native-paper": "^4.1.0",
    "react-native-polyfill-globals": "^1.0.5",
    "react-native-reanimated": "^1.13.0",
    "react-native-safe-area-context": "^3.1.7",
    "react-native-safe-area-view": "^1.1.1",
    "react-native-screens": "^2.10.1",
    "react-native-vector-icons": "^7.0.0",
    "util": "^0.12.3",
    "whatwg-url": "^8.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-async-generator-functions": "^7.10.5",
    "@babel/runtime": "^7.8.4",
    "@react-native-community/eslint-config": "^1.1.0",
    "babel-jest": "^25.1.0",
    "eslint": "^6.5.1",
    "jest": "^26.4.2",
    "metro-react-native-babel-preset": "^0.59.0",
    "patch-package": "^6.2.2",
    "pod-install": "^0.1.10",
    "react-test-renderer": "16.13.1"
  },
  "jest": {
    "preset": "react-native"
  },
  "optionalDependencies": {
    "ios-deploy": "^1.11.1"
  }
}
